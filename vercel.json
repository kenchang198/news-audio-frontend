{
  "version": 2,
  "name": "tech-news-audio-player-ken",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "NEXT_PUBLIC_USE_MOCK_DATA": "true"
  },
  "functions": {
    "app/**/*.{js,ts,tsx}": {
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/audio/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
